<Window x:Class="GLTWarter.LoginScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:my="clr-namespace:GLTWarter.Controls"
    Name="LoginWindow"
    Width="425" Visibility="Collapsed" ResizeMode="NoResize" SizeToContent="Height"
        Title="{Binding Content.Title, ElementName=frameContent}" Icon="App.ico">
    <Frame Name="frameContent" JournalOwnership="OwnsJournal" NavigationUIVisibility="Hidden" Focusable="False" />
</Window>


